<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            <gradient android:angle="270" android:endColor="#FF40A0A0" android:startColor="#FF40A0A0" />
            <!--<stroke android:width="1.5dip" android:color="#FF2ACFCF"/>-->
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            <gradient android:angle="270" android:startColor="#FF5DEBEB" android:endColor="#FF5DEBEB"></gradient>
            <!--<stroke android:width="1.5dip" android:color="#FFBEBDBD"/>-->
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</selector>
